{
  "name": "chat-frontend",
  "version": "1.0.0",
  "description": "Frontend для чат приложения",
  "main": "index.html",
  "scripts": {
    "dev": "sass --watch scss:dist --style=expanded",
    "build": "sass scss:dist --style=compressed && tsc",
    "build:ts": "tsc",
    "build:css": "sass scss:dist --style=compressed",
    "watch:ts": "tsc --watch",
    "serve": "npx http-server . -p 3000 -o",
    "dev:full": "concurrently \"npm run watch:ts\" \"npm run dev\""
  },
  "keywords": [
    "chat",
    "frontend",
    "scss"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.3.1",
    "concurrently": "^9.2.1",
    "http-server": "^14.1.1",
    "sass": "^1.69.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
